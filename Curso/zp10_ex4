REPORT ZP10_EX4.

DATA: lt_colors TYPE TABLE OF string.

APPEND 'Red' TO lt_colors.
APPEND 'Green' TO lt_colors.
APPEND 'Blue' TO lt_colors.
APPEND 'Yellow' TO lt_colors.
APPEND 'Orange' TO lt_colors.

LOOP AT lt_colors INTO DATA(ls_color).
  WRITE: / ls_color.
ENDLOOP.
